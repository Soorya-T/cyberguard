# ===============================
# CyberGuard Backend Configuration
# ===============================
# 
# Copy this file to .env and update values for your environment.
# NEVER commit .env files with real secrets to version control.
#

# -------------------------------
# Application Settings
# -------------------------------
APP_NAME=CyberGuard
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# -------------------------------
# Database Configuration
# -------------------------------
# IMPORTANT: Using port 5433 because Docker maps 5433:5432
# psycopg2 driver is specified for SQLAlchemy 2.0 compatibility
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5433/cyberguard_db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# -------------------------------
# JWT Security Configuration
# -------------------------------
# IMPORTANT: Generate a secure secret key for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ISSUER=cyberguard-auth
AUDIENCE=cyberguard-api

# -------------------------------
# Security Settings
# -------------------------------
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# -------------------------------
# CORS Configuration
# -------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept,Origin,X-Requested-With

# -------------------------------
# Rate Limiting
# -------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
LOGIN_RATE_LIMIT=5

# -------------------------------
# Logging
# -------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json